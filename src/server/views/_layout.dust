<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta keywords="paste code open source share">
    <title>npaste</title>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/custom.css">
    {+styles/}
    <script src="/public/js/jquery.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    
</head>

<body>
    <div id="notification-container"></div>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/home" class="navbar-brand">NPaste</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="btn btn-success" id="create-paste-btn" href="/pastes/create">Create paste</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/my-pastes">My Pastes</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        {#user}
                            {user.username}
                        {:else}
                            Guest
                        {/user}    
                        <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            {#user}
                                <li><a href="/profile">Profile</a></li>
                                <li><a href="/sign-out">Sign out</a></li>
                            {:else}
                                <li><a href="/sign-up">Sign up</a></li>
                                <li class="divider"></li>
                                <li><a href="/sign-in">Sign in</a></li>
                                <li><a href="/sign-in/github">Sign in with GitHub</a></li>
                            {/user}
                            
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <section id="container">
        <main class="container col-lg-8 pull-left">
        {+mainContent/}
        </main>

        <aside class="container col-md-3 pull-right">
            <ul class="list-group table-of-contents">
                {#mostRecentPastes}
                    <li class="list-group-item">
                        {#name}
                            <a class="text-success" href="/pastes/{_id}/details">{name}</a>
                        {/name}
                        {#lang}
                            <p class="text-warning">{lang}</p>
                        {/lang}
                        <time>{dateCreated}</time>
                    </li>
                {/mostRecentPastes}
            </ul>
        </aside>
        <footer>
            Footer stuff here
        </footer>
    </section id="container">
    {+scripts/}
</body>

</html>